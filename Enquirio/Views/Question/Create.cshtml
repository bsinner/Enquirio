@{ ViewBag.Title = "Ask Question"; }
@model Question

<br /><br />

<div class="row justify-content-center">
    <div class="col-sm-6">

        <form method="POST" asp-controller="Question">
            <h4>Ask Question</h4>
            <br />
            
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            
            <div class="form-group mt-4">
                <label asp-for="Contents"></label>
                <textarea asp-for="Contents" class="form-control"></textarea>
            </div>
            
            <button class="btn btn-outline-dark float-right" type="submit">Submit</button>
        </form>

    </div>
</div>