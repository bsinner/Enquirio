@model Question
@{ ViewBag.Title = (Model == null ? "404 Question Not Found" : Model.Title); }

<br/><br/>

<div class="row">
    <div class="col-sm-9">
            
        @if (Model == null) {
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <h3>Error 404: Question not Found</h3>
                    <br/>
                    <a asp-controller="Home" asp-action="Index">Back to Home</a>
                </div>
            </div>
        } else {
                        
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <h4>@Model?.Title</h4>
                    <p>@Model?.Contents</p>

                    <br/>
                    <i>Asked by Author on ##/##/###</i>
                </div>
            </div>
                
            @foreach (var answer in Model.Answers) {
                 <div class="mt-4 row justify-content-center">
                     <div class="col-sm-8">
                         <hr />
                             
                         <h4>@answer.Title</h4>
                         <p>@answer.Contents</p>
                             
                         <br />
                         <i class="text-secondary">&nbsp;&nbsp;Answered by Author on ##/##/####</i>

                     </div>
                 </div>
             }
        }
        
    </div>
</div>
